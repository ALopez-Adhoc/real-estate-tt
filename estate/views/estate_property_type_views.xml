<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_type_view_tree" model="ir.ui.view">
        <field name="name">Property Types</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">Property Types</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_button_box" position="inside">
                        <button name="%(estate_property_offer_action)d" type="action" title="Offer" class="oe_stat_button" icon="fa-money">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="offer_count"/></span>
                                <span class="o_stat_text">Offers</span>
                            </div>
                        </button>
                    </div>                    
                    <div class='oe_title'>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="Propiedades">        
                            <group>
                                <field name="property_ids">
                                    <tree>
                                        <field name="name" />
                                        <field name="expected_price" />
                                        <field name="state" />
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Ofertas">
                            <group>
                                <field name="offer_ids" />
                                <field name="offer_count" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
